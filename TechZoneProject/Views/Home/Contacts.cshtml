@{
    ViewData["Title"] = "Контакти";
}

<div class="shop-container">
    <div class="section-title">
        <h2><i class="fas fa-envelope"></i> Свържете се с нас</h2>
    </div>

    <div class="row">
        <div class="col-md-5 mb-4">
            <div class="p-4 bg-dark border border-secondary rounded h-100">
                <h4 class="mb-4 text-primary">TechZone Headquarters</h4>

                <div class="d-flex mb-3">
                    <div class="me-3 text-primary"><i class="fas fa-map-marker-alt fa-2x"></i></div>
                    <div>
                        <h6 class="fw-bold mb-1">Адрес:</h6>
                        <p class="text-muted mb-0">гр. София, Студентски град,<br>ул. "Акад. Борис Стефанов" 15</p>
                    </div>
                </div>

                <div class="d-flex mb-3">
                    <div class="me-3 text-primary"><i class="fas fa-phone-alt fa-2x"></i></div>
                    <div>
                        <h6 class="fw-bold mb-1">Телефон:</h6>
                        <p class="text-muted mb-0">+359 888 123 456</p>
                    </div>
                </div>

                <div class="d-flex mb-3">
                    <div class="me-3 text-primary"><i class="fas fa-envelope fa-2x"></i></div>
                    <div>
                        <h6 class="fw-bold mb-1">Email:</h6>
                        <p class="text-muted mb-0">support@techzone.bg</p>
                    </div>
                </div>

                <div class="d-flex mb-3">
                    <div class="me-3 text-primary"><i class="fas fa-clock fa-2x"></i></div>
                    <div>
                        <h6 class="fw-bold mb-1">Работно време:</h6>
                        <p class="text-muted mb-0">Пон - Пет: 09:00 - 19:00<br>Съб - Нед: 10:00 - 16:00</p>
                    </div>
                </div>

                <hr class="border-secondary my-4">

                <div class="social-icons text-center">
                    <a href="#" class="social-link mx-2 fs-4"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="social-link mx-2 fs-4"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-link mx-2 fs-4"><i class="fab fa-discord"></i></a>
                </div>
            </div>
        </div>

        <div class="col-md-7 mb-4">
            <div class="p-4 bg-dark border border-secondary rounded h-100">
                <h4 class="mb-4">Изпратете ни съобщение</h4>
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Име</label>
                            <input type="text" class="tech-input" placeholder="Вашето име">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="tech-input" placeholder="name@example.com">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Тема</label>
                        <input type="text" class="tech-input" placeholder="Относно...">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Съобщение</label>
                        <textarea class="tech-input" rows="5" placeholder="Как можем да помогнем?"></textarea>
                    </div>
                    <button type="button" class="btn btn-tech w-100" onclick="alert('Благодарим за запитването! Ще се свържем с Вас скоро.')">
                        <i class="fas fa-paper-plane"></i> Изпрати
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="rounded overflow-hidden border border-secondary" style="height: 400px;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2934.619736853767!2d23.335028315478474!3d42.64821697916853!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa8421051512e9%3A0xf6396570c6344d56!2sStudentski%20grad%2C%20Sofia!5e0!3m2!1sen!2sbg!4v1620000000000!5m2!1sen!2sbg"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>