@model IEnumerable<TechZone.Web.ViewModels.Admin.Models.ProductAllViewModel>

@{
    ViewData["Title"] = "Управление на продукти";
}

<div class="admin-container">
    <div class="card admin-card">
        <div class="card-header-custom d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="fas fa-boxes"></i> Всички Продукти</h2>
            <a asp-action="SelectType" class="btn btn-sm btn-success">
                <i class="fas fa-plus"></i> Нов Продукт
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0" style="background-color: transparent;">
                    <thead>
                        <tr class="text-uppercase text-muted small">
                            <th class="ps-4">Продукт</th>
                            <th>Категория</th>
                            <th>Марка</th>
                            <th>Цена</th>
                            <th>Наличност</th>
                            <th class="text-end pe-4">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@product.ImageUrl" class="rounded border border-secondary" style="width: 50px; height: 50px; object-fit: cover; margin-right: 15px;" />
                                        <span class="fw-bold">@product.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@product.ProductType</span>
                                </td>
                                <td>@product.Brand</td>
                                <td class="text-success fw-bold">@product.Price.ToString("F2") лв.</td>
                                <td>
                                    @if (product.StockQuantity > 0)
                                    {
                                        <span class="text-success"><i class="fas fa-check-circle"></i> @product.StockQuantity бр.</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><i class="fas fa-times-circle"></i> Изчерпан</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit@(product.ProductType)" asp-route-id="@product.Id" class="btn btn-sm btn-warning me-2">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline" onsubmit="return confirm('Сигурни ли сте, че искате да изтриете този продукт?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <h4>Няма намерени продукти.</h4>
                    <p>Добавете първия си продукт от бутона горе.</p>
                </div>
            }
        </div>
    </div>
</div>