@model TechZone.Web.ViewModels.Admin.Models.AddCpuViewModel

@{
    ViewData["Title"] = "Добави Процесор";
    var brands = ViewBag.Brands as IEnumerable<KeyValuePair<string, string>>;
}

<div class="admin-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card admin-card">
                <div class="card-header-custom">
                    <h2 class="text-center mb-0"><i class="fas fa-microchip"></i> Добавяне на Процесор</h2>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <h5 class="section-header">Търговска информация</h5>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label-custom"></label>
                                <input asp-for="Name" class="form-control-dark" placeholder="Напр: AMD Ryzen 7 7800X3D" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="BrandId" class="form-label-custom">Производител</label>
                                <select asp-for="BrandId" class="form-control-dark form-select-dark">
                                    <option value="">-- Избери Марка --</option>
                                    @if (brands != null)
                                    {
                                        foreach (var brand in brands)
                                        {
                                            <option value="@brand.Key">@brand.Value</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label asp-for="Price" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control-dark" />
                                    <span class="input-group-text-dark">лв.</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="StockQuantity" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="StockQuantity" type="number" class="form-control-dark" />
                                    <span class="input-group-text-dark">бр.</span>
                                </div>
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="WarrantyMonths" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="WarrantyMonths" type="number" class="form-control-dark" />
                                    <span class="input-group-text-dark">мес.</span>
                                </div>
                                <span asp-validation-for="WarrantyMonths" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3 d-flex align-items-end pb-2">
                                <div class="form-check form-switch custom-switch">
                                    <input asp-for="HasBoxCooler" class="form-check-input" type="checkbox" role="switch">
                                    <label class="form-check-label text-white" asp-for="HasBoxCooler">Охладител</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label-custom"></label>
                            <input asp-for="ImageUrl" class="form-control-dark" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label-custom"></label>
                            <textarea asp-for="Description" rows="3" class="form-control-dark"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <h5 class="section-header text-success-custom">Технически характеристики</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Series" class="form-label-custom"></label>
                                <input asp-for="Series" class="form-control-dark" placeholder="Напр: Ryzen 7 или Core i5" />
                                <span asp-validation-for="Series" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Socket" class="form-label-custom"></label>
                                <input asp-for="Socket" class="form-control-dark" placeholder="Напр: AM5 или LGA1700" />
                                <span asp-validation-for="Socket" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhysicalCores" class="form-label-custom"></label>
                                <input asp-for="PhysicalCores" type="number" class="form-control-dark" />
                                <span asp-validation-for="PhysicalCores" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LogicalCores" class="form-label-custom"></label>
                                <input asp-for="LogicalCores" type="number" class="form-control-dark" />
                                <span asp-validation-for="LogicalCores" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="BaseFrequencyGhz" class="form-label-custom"></label>
                                <input asp-for="BaseFrequencyGhz" type="number" step="0.1" class="form-control-dark" />
                                <span asp-validation-for="BaseFrequencyGhz" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="TurboFrequencyGhz" class="form-label-custom"></label>
                                <input asp-for="TurboFrequencyGhz" type="number" step="0.1" class="form-control-dark" />
                                <span asp-validation-for="TurboFrequencyGhz" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Cache" class="form-label-custom"></label>
                                <input asp-for="Cache" class="form-control-dark" placeholder="Напр: 32MB L3" />
                                <span asp-validation-for="Cache" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="border-secondary my-4" />

                        <button type="submit" class="btn-admin-save w-100">
                            <i class="fas fa-save"></i> ЗАПИШИ ПРОДУКТА
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>