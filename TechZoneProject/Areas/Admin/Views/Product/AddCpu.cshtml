@model TechZone.Web.ViewModels.Admin.Models.AddCpuViewModel

@{
    ViewData["Title"] = "Добави Процесор";
}

<div class="admin-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card admin-card">
                <div class="card-header-custom">
                    <h2 class="text-center mb-0"><i class="fas fa-microchip"></i> Добавяне на Процесор</h2>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <partial name="_ProductCommonInputs" model="Model" />

                        <h5 class="section-header text-success-custom">Технически характеристики</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Socket" class="form-label-custom"></label>
                                <input asp-for="Socket" class="form-control-dark" placeholder="Напр: AM5" />
                                <span asp-validation-for="Socket" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Series" class="form-label-custom"></label>
                                <input asp-for="Series" class="form-control-dark" placeholder="Напр: Ryzen 7" />
                                <span asp-validation-for="Series" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhysicalCores" class="form-label-custom"></label>
                                <input asp-for="PhysicalCores" type="number" class="form-control-dark" />
                                <span asp-validation-for="PhysicalCores" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LogicalCores" class="form-label-custom"></label>
                                <input asp-for="LogicalCores" type="number" class="form-control-dark" />
                                <span asp-validation-for="LogicalCores" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BaseFrequencyGhz" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="BaseFrequencyGhz" type="number" step="0.1" class="form-control-dark" />
                                    <span class="input-group-text-dark">GHz</span>
                                </div>
                                <span asp-validation-for="BaseFrequencyGhz" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TurboFrequencyGhz" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="TurboFrequencyGhz" type="number" step="0.1" class="form-control-dark" />
                                    <span class="input-group-text-dark">GHz</span>
                                </div>
                                <span asp-validation-for="TurboFrequencyGhz" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cache" class="form-label-custom"></label>
                            <input asp-for="Cache" class="form-control-dark" placeholder="Напр: 32MB L3" />
                            <span asp-validation-for="Cache" class="text-danger"></span>
                        </div>

                        <div class="mb-4 pt-2">
                            <div class="form-check form-switch custom-switch">
                                <input asp-for="HasBoxCooler" class="form-check-input" type="checkbox" role="switch">
                                <label class="form-check-label text-white ms-2" asp-for="HasBoxCooler">
                                    <i class="fas fa-fan"></i> Включен охладител
                                </label>
                            </div>
                        </div>

                        <hr class="divider border-secondary my-4" />

                        <button type="submit" class="btn-admin-save w-100">
                            <i class="fas fa-save"></i> ЗАПИШИ ПРОЦЕСОР
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>