@{
    ViewData["Title"] = "Избери тип продукт";

    var productTypes = new[]
{
    new {
        Title = "Процесор",
        Icon = "fas fa-microchip",
        Action = "AddCpu",
        Description = "Добави CPU (AMD/Intel)",
        IsActive = true
    },

    new {
        Title = "Видео Карта",
        Icon = "fas fa-gamepad",
        Action = "AddGpu",
        Description = "Добави GPU (Nvidia/AMD)",
        IsActive = true
    },

    new {
        Title = "Дънна платка",
        Icon = "fas fa-server", 
        Action = "AddMotherboard",
        Description = "Добави MB (ATX/mATX)",
        IsActive = true
    },

    new {
        Title = "Захранване",
        Icon = "fas fa-plug",
        Action = "AddPowerSupply",
        Description = "Добави PSU (ATX/SFX)",
        IsActive = true
    },

   

    new {
        Title = "RAM Памет",
        Icon = "fas fa-memory",
        Action = "AddRam",
        Description = "DDR4 / DDR5 модули",
        IsActive = true
    },

    new {
        Title = "Дисково пространство",
        Icon = "fas fa-hdd",
        Action = "AddStorageDrive",
        Description = "SSD / HDD / NVMe",
        IsActive = true
    },

    new {
        Title = "Кутия",
        Icon = "fas fa-box",
        Action = "AddCase",
        Description = "PC Кутии (Tower)",
        IsActive = true
    },

    new {
        Title = "Монитор",
        Icon = "fas fa-desktop",
        Action = "AddDisplay",
        Description = "Дисплеи и екрани",
        IsActive = true
    },

    new {
        Title = "Мишка",
        Icon = "fas fa-mouse",
        Action = "AddMouse",
        Description = "Гейминг мишки",
        IsActive = true
    },
    new {
        Title = "Клавиатура",
        Icon = "fas fa-keyboard",
        Action = "AddKeyboard",
        Description = "Механични клавиатури",
        IsActive = true
    }
};
}

<div class="admin-container mt-5 text-center text-white">
    <h2 class="mb-5 text-uppercase" style="letter-spacing: 2px;">Какъв продукт искаш да добавиш?</h2>

    <div class="row justify-content-center">

        @foreach (var item in productTypes)
        {
            <div class="col-md-3 mb-4">
                @if (item.IsActive)
                {
                    <a asp-action="@item.Action" class="card select-card select-card-active h-100">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-5">
                            <i class="@item.Icon fa-3x mb-3 icon-active"></i>
                            <h4>@item.Title</h4>
                            <p class="text-muted small mb-0">@item.Description</p>
                        </div>
                    </a>
                }
                else
                {
                    <div class="card select-card select-card-disabled h-100">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-5">
                            <i class="@item.Icon fa-3x mb-3"></i>
                            <h4>@item.Title</h4>
                            <small class="text-muted">@item.Description</small>
                        </div>
                    </div>
                }
            </div>
        }

    </div>

    <div class="mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light px-4 py-2">
            <i class="fas fa-arrow-left"></i> Обратно към таблото
        </a>
    </div>
</div>