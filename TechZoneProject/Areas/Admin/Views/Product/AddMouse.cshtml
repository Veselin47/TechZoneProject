@model TechZone.Web.ViewModels.Admin.Models.AddMouseViewModel

@{
    ViewData["Title"] = "Добави Мишка";
}

<div class="admin-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card admin-card">

                <div class="card-header-custom">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-mouse"></i> Добавяне на Мишка
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <partial name="_ProductCommonInputs" model="Model" />


                        <h5 class="section-header text-success-custom">Технически характеристики</h5>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Dpi" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="Dpi" type="number" class="form-control-dark" placeholder="Напр: 16000" />
                                    <span class="input-group-text-dark">DPI</span>
                                </div>
                                <span asp-validation-for="Dpi" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="ConnectionType" class="form-label-custom"></label>
                                <select asp-for="ConnectionType" class="form-control-dark form-select-dark">
                                    <option value="Wired (USB)">С кабел (USB)</option>
                                    <option value="Wireless (2.4GHz)">Безжична (2.4GHz Dongle)</option>
                                    <option value="Bluetooth">Bluetooth</option>
                                    <option value="Tri-Mode">Tri-Mode (Кабел + Wireless + BT)</option>
                                </select>
                                <span asp-validation-for="ConnectionType" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="SensorType" class="form-label-custom"></label>
                                <select asp-for="SensorType" class="form-control-dark form-select-dark">
                                    <option value="Optical">Оптичен (Optical)</option>
                                    <option value="Laser">Лазерен (Laser)</option>
                                </select>
                                <span asp-validation-for="SensorType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="ButtonsCount" class="form-label-custom"></label>
                                <input asp-for="ButtonsCount" type="number" class="form-control-dark" placeholder="6" />
                                <span asp-validation-for="ButtonsCount" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="WeightGrams" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="WeightGrams" type="number" step="0.1" class="form-control-dark" placeholder="63" />
                                    <span class="input-group-text-dark">гр.</span>
                                </div>
                                <span asp-validation-for="WeightGrams" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Color" class="form-label-custom"></label>
                                <input asp-for="Color" class="form-control-dark" placeholder="Напр: Черен, Бял" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="divider border-secondary my-4" />

                        <button type="submit" class="btn-admin-save w-100">
                            <i class="fas fa-save"></i> ЗАПИШИ МИШКА
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>