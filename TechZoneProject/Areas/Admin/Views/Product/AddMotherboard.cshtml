@model TechZone.Web.ViewModels.Admin.Models.AddMotherboardViewModel

@{
    bool isEdit = ViewData["IsEdit"] == null ? false : (bool)ViewData["IsEdit"];
    ViewData["Title"] = isEdit ? "Редактиране на Дъно" : "Добави Дъно";
}

<div class="admin-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card admin-card">

                <div class="card-header-custom">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-server"></i> @(isEdit ? "Редактиране на Дънна платка" : "Добавяне на Дънна платка")
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <partial name="_ProductCommonInputs" model="Model" />
                        <h5 class="section-header text-success-custom">Технически характеристики</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Socket" class="form-label-custom"></label>
                                <input asp-for="Socket" class="form-control-dark" placeholder="Напр: AM5 или LGA1700" />
                                <span asp-validation-for="Socket" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Chipset" class="form-label-custom"></label>
                                <input asp-for="Chipset" class="form-control-dark" placeholder="Напр: B650 или Z790" />
                                <span asp-validation-for="Chipset" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="FormFactor" class="form-label-custom"></label>
                                <select asp-for="FormFactor" class="form-control-dark form-select-dark">
                                    <option value="">-- Избери --</option>
                                    <option value="ATX">ATX</option>
                                    <option value="mATX">Micro-ATX (mATX)</option>
                                    <option value="Mini-ITX">Mini-ITX</option>
                                    <option value="E-ATX">E-ATX</option>
                                </select>
                                <span asp-validation-for="FormFactor" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="MemoryType" class="form-label-custom"></label>
                                <select asp-for="MemoryType" class="form-control-dark form-select-dark">
                                    <option value="DDR5">DDR5</option>
                                    <option value="DDR4">DDR4</option>
                                </select>
                                <span asp-validation-for="MemoryType" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="MemorySlots" class="form-label-custom"></label>
                                <input asp-for="MemorySlots" type="number" class="form-control-dark" />
                                <span asp-validation-for="MemorySlots" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4 pt-2">
                            <div class="form-check form-switch custom-switch">
                                <input asp-for="HasWifi" class="form-check-input" type="checkbox" role="switch">
                                <label class="form-check-label text-white ms-2" asp-for="HasWifi">
                                    <i class="fas fa-wifi"></i> Вграден Wi-Fi
                                </label>
                            </div>
                        </div>

                        <hr class="divider border-secondary my-4" />

                        <button type="submit" class="btn-admin-save w-100">
                            <i class="fas fa-save"></i> ЗАПИШИ ДЪННА ПЛАТКА
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>