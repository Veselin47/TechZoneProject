@model TechZone.Web.ViewModels.Admin.Models.AddPowerSupplyViewModel

@{
    ViewData["Title"] = "Добави Захранване";
    var brands = Model.Brands;
}

<div class="admin-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card admin-card">

                <div class="card-header-custom">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-plug"></i> Добавяне на Захранване (PSU)
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form method="post">

                        <partial name="_ProductCommonInputs" model="Model" />

                        <h5 class="section-header text-success-custom">Технически характеристики</h5>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="PowerWatts" class="form-label-custom"></label>
                                <div class="input-group">
                                    <input asp-for="PowerWatts" type="number" class="form-control-dark" placeholder="850" />
                                    <span class="input-group-text-dark">W</span>
                                </div>
                                <span asp-validation-for="PowerWatts" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Certification" class="form-label-custom"></label>
                                <select asp-for="Certification" class="form-control-dark form-select-dark">
                                    <option value="">-- Избери --</option>
                                    <option value="None">Без сертификат</option>
                                    <option value="80+ White">80+ White</option>
                                    <option value="80+ Bronze">80+ Bronze</option>
                                    <option value="80+ Silver">80+ Silver</option>
                                    <option value="80+ Gold">80+ Gold</option>
                                    <option value="80+ Platinum">80+ Platinum</option>
                                    <option value="80+ Titanium">80+ Titanium</option>
                                </select>
                                <span asp-validation-for="Certification" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Standard" class="form-label-custom"></label>
                                <input asp-for="Standard" class="form-control-dark" placeholder="Напр: ATX 3.0" />
                                <span asp-validation-for="Standard" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row align-items-center">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FormFactor" class="form-label-custom"></label>
                                <select asp-for="FormFactor" class="form-control-dark form-select-dark">
                                    <option value="ATX">ATX (Стандартно)</option>
                                    <option value="SFX">SFX (Малко)</option>
                                    <option value="SFX-L">SFX-L</option>
                                    <option value="TFX">TFX</option>
                                </select>
                                <span asp-validation-for="FormFactor" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3 pt-3">
                                <div class="form-check form-switch custom-switch">
                                    <input asp-for="IsModular" class="form-check-input" type="checkbox" role="switch">
                                    <label class="form-check-label text-white ms-2" asp-for="IsModular">
                                        <i class="fas fa-cogs"></i> Модулно окабеляване
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="divider border-secondary my-4" />

                        <button type="submit" class="btn-admin-save w-100">
                            <i class="fas fa-save"></i> ЗАПИШИ ЗАХРАНВАНЕ
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>