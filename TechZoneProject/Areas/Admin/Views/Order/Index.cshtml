@model IEnumerable<TechZone.Web.ViewModels.Admin.Models.OrderAdminViewModel>

@{
    ViewData["Title"] = "Управление на поръчки";
}

<div class="admin-container container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white"><i class="fas fa-list"></i> Всички Поръчки</h2>
    </div>

    <div class="card bg-dark border-secondary">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Дата</th>
                        <th>Клиент</th>
                        <th>Сума</th>
                        <th>Артикули</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@order.UserEmail</td>
                            <td class="text-success fw-bold">@order.TotalAmount.ToString("C")</td>
                            <td>@order.ItemsCount бр.</td>
                            <td>
                                @if (order.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Чакаща</span>
                                }
                                else if (order.Status == "Shipped")
                                {

                                    <span class="badge bg-primary">Изпратена</span>
                                }
                                else if (order.Status == "Delivered")
                                {

                                    <span class="badge bg-success">Доставена</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-light">
                                    <i class="fas fa-eye"></i> Преглед
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>