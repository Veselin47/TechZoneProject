@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Вход в TechZone</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Имейл адрес</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Парола</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox-wrapper form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" style="background-color: #333; border-color: #555;" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    Запомни ме
                </label>
            </div>

            <button id="login-submit" type="submit" class="btn-tech w-100 btn-lg">Влез</button>

            <div class="auth-links">
                <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нямаш акаунт? Регистрирай се</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}